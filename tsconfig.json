{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["es2022"],
    "allowImportingTsExtensions": true,
    "paths": {
      "$app/*": ["./src/app/*"],
      "$lib/*": ["./src/lib/*"]
    }
  }
}
